{
  "name": "@ott/picturesque",
  "private": true,
  "description": "Application for generating responsive background images",
  "repository": "onetwotrip/picturesque",
  "license": "MIT",
  "author": "One Two Trip",
  "type": "module",
  "scripts": {
    "build": "netlify build",
    "build:client": "vite build",
    "start": "netlify dev",
    "start:client": "vite --clearScreen",
    "test": "pnpm run /^test:/",
    "test:css": "stylelint \"**/*.{svelte,css}\"",
    "test:format": "prettier --check \"**/*.{js,ts,svelte,css,json,md,yml}\"",
    "test:js": "eslint .",
    "test:size": "pnpm run build:client && size-limit",
    "test:spelling": "cspell \"**/*\"",
    "test:svelte": "svelte-check",
    "test:types": "tsc --noEmit --pretty"
  },
  "dependencies": {
    "@nanostores/persistent": "^0.10.2",
    "@netlify/functions": "^3.0.0",
    "@sveltejs/vite-plugin-svelte": "5.0.3",
    "browserslist": "^4.24.4",
    "busboy": "^1.6.0",
    "jimp": "^1.6.0",
    "jszip": "^3.10.1",
    "lightningcss": "^1.29.1",
    "nanostores": "^0.11.3",
    "sharp": "^0.33.5",
    "shiki": "^1.27.2",
    "shiki-magic-move": "^0.5.2",
    "svelte": "5.18.0",
    "svelte-preprocess": "^6.0.3",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-plugin-html": "^3.2.2"
  },
  "devDependencies": {
    "@azat-io/eslint-config": "^2.10.0",
    "@azat-io/stylelint-config": "^0.1.1",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@cspell/dict-ru_ru": "^2.2.4",
    "@size-limit/file": "^11.1.6",
    "@types/busboy": "^1.5.4",
    "@types/node": "^22.10.7",
    "cspell": "^8.17.2",
    "eslint": "^9.18.0",
    "nano-staged": "^0.8.0",
    "netlify-cli": "^18.0.1",
    "postcss-html": "^1.8.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "simple-git-hooks": "^2.11.1",
    "size-limit": "^11.1.6",
    "stylelint": "^16.13.2",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-gamut": "^1.3.4",
    "stylelint-order": "^6.0.4",
    "stylelint-plugin-logical-css": "^1.2.1",
    "svelte-check": "^4.1.4"
  }
